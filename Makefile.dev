# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Cleanup                                                                    │
# └─────────────────────────────────────────────────────────────────────────────┘

dev-clean:
	@echo "🧹 Cleaning development artifacts..."
	@echo "   Cleaning Python cache files..."
	@find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	@find . -name "*.pyc" -delete 2>/dev/null || true
	@find . -name "*.pyo" -delete 2>/dev/null || true
	@echo "   Cleaning build directories..."
	@rm -rf build dist .pytest_cache
	@rm -rf services/holographic-memory/core/*.egg-info
	@rm -rf services/holographic-memory/core/native/holographic/build
	@rm -rf htmlcov .coverage
	@echo "   Cleaning SOA artifacts..."
	@rm -f soa_config.json
	@rm -rf dashboard/__pycache__
	@rm -rf services/dashboard/__pycache__
	@echo "   Cleaning test artifacts..."
	@rm -rf tests/reports/html/*
	@rm -rf tests/reports/junit/*
	@rm -rf logs/*.log
	@echo "   Cleaning temporary files..."
	@rm -rf .DS_Store
	@find . -name "*.tmp" -delete 2>/dev/null || true
	@find . -name "*.log" -not -path "./logs/*" -delete 2>/dev/null || true
	@echo "✅ Development cleanup complete!"

clean-all:
	@echo "🧹 COMPLETE SYSTEM CLEANUP - Fresh Start"
	@echo "=========================================="
	@echo "🛑 Step 1: Stopping all SOA processes..."
	@$(MAKE) soa-kill
	@echo ""
	@echo "🗑️  Step 2: Removing virtual environment..."
	@rm -rf venv313
	@echo ""
	@echo "🧹 Step 3: Cleaning all Python artifacts..."
	@find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	@find . -name "*.pyc" -delete 2>/dev/null || true
	@find . -name "*.pyo" -delete 2>/dev/null || true
	@find . -name "*.pyd" -delete 2>/dev/null || true
	@echo ""
	@echo "🏗️  Step 4: Cleaning build directories..."
	@rm -rf build dist .pytest_cache
	@rm -rf services/holographic-memory/core/*.egg-info
	@rm -rf services/holographic-memory/core/native/holographic/build
	@rm -rf htmlcov .coverage
	@echo ""
	@echo "🌐 Step 5: Cleaning SOA artifacts..."
	@rm -f soa_config.json
	@rm -rf dashboard/__pycache__
	@rm -rf services/dashboard/__pycache__
	@echo ""
	@echo "🧪 Step 6: Cleaning test artifacts..."
	@rm -rf tests/reports/html/*
	@rm -rf tests/reports/junit/*
	@rm -rf logs/*.log
	@echo ""
	@echo "🗂️  Step 7: Cleaning temporary files..."
	@rm -rf .DS_Store
	@find . -name "*.tmp" -delete 2>/dev/null || true
	@find . -name "*.log" -not -path "./logs/*" -delete 2>/dev/null || true
	@find . -name "*.swp" -delete 2>/dev/null || true
	@find . -name "*.swo" -delete 2>/dev/null || true
	@find . -name "*~" -delete 2>/dev/null || true
	@echo ""
	@echo "✅ COMPLETE CLEANUP FINISHED!"
	@echo "=========================================="
	@echo "🎯 Ready for fresh start! Run 'make dev' to set up again."
