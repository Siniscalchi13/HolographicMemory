PY              ?= python3
PIP             ?= $(PY) -m pip
VENV_DIR        ?= venv313
VENV_PY         ?= $(shell pwd)/$(VENV_DIR)/bin/python
VENV_PIP        ?= $(VENV_PY) -m pip
DEV_HOST        ?= 0.0.0.0
DEV_PORT        ?= $(shell python3 scripts/find_port.py)

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Target Declarations                                                        │
